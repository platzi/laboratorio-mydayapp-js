root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80
spaces_around_operators = true
indent_brace_style = K&R
curly_bracket_next_line = false
end_of_line = lf

[*.{ts,js}]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[CHANGELOG.md]
indent_size = false
